extends ./layout.pug
include ./mixin.pug
block title
  title Pug Demo

block body
  if page == 'home'
    h1 Products
    ul.products
      +productList(result)
    button
        a(href="/products/new") Add a product
    button
      a(href="/articles/new") Add an Article
  else
    h1 Articles
    ul.products
      +articleList(result)
    button
      a(href="/articles/new") Add an Article
    button
        a(href="/products/new") Add a product